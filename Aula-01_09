import java.util.*;
public class exercicio1
{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
        
        System.out.println("\f Digie uma palavra: ");
        String palavra = in.nextLine();
        
        if (palavra.isEmpty()){
            System.out.println("Digite a posição do String a ser pesquisada: ");
            int posicao = in.nextInt();
            
            if (posicao<palavra.length() && posicao>=0){
                System.out.print("O caracter da posição" + posicao + " é " + palavra.charAt(posicao));
            }else {
                System.out.println("Posição invalida!!");
            }
            System.out.println("Digite uma letra a ser pesquisada: ");
            String parte = in.nextLine();
            parte = in.nextLine();
            
            if(palavra.startsWith(parte))
                System.out.println("A palavra começa com "+ parte);
            else{ 
                System.out.println("A palavra não começa com "+ parte);
            }
            
            System.out.println("Digite a parte final a ser pesquisada: ");
            String finish = in.nextLine();
            
            if(palavra.endsWith(finish))
                System.out.println("A palavra começa com "+ finish);
            else{ 
                System.out.println("A palavra não começa com "+ finish);
            }
            
            //contains verifica se a Sring contem a string do parametro
            System.out.println("Digite a subString a ser pesquisada: ");
            String subString = in.nextLine();
            
            if(palavra.contains(subString)){
            System.out.println("A palavra "+ palavra + " em o pedaço " + subString);;
            }else {
            System.out.println("A palavra "+ palavra + " não tem o pedaço " + subString);
            }
        }else {
            System.out.println("DIGITE UM VALOR NÃO NULO");
        }
        //TESTE DO CAMPARE TO COMPARA DUAS STRINGS
        
        System.out.println("Digite uma outra palavra:");
        String outraPlavra = in.nextLine();
        
        if (palavra.compareToIgnoreCase(outraPlavra)==0){
            System.out.println("São Iguais");
        }else if(palavra.compareToIgnoreCase(outraPlavra)>0){
            System.out.println("Outra palava vem antes de palavra");
        }else {
            System.out.println("Palavra vem antes de outra palavra");

        }
    }
}
